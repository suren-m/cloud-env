# added after rust installation
# source "$HOME/.cargo/env"

# -----Path Vars----- #
# Path Variable 
# local bin
export PATH=$PATH:$HOME/.local/bin

# Go and Go based tools compiled from source
export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:$HOME/go/bin

